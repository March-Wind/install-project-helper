{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "compilerOptions": {
      "esModuleInterop": true,
    }
  },
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": false,
    "outDir": "./lib",
    "jsx": "react",
    "baseUrl": "./",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "noUnusedParameters": false,
    "strictPropertyInitialization": false,
    "strict": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": ["node_modules/@types", "src/global.d.ts"]
  },
  "include": [
    "./src/",
    ".eslintrc.cjs",
    "webpack.config.js", 
    "src/global.d.ts"   ],
  "exclude": [
    "src/config-file/*.ts"
  ],
  "files": [
    "src/global.d.ts"
  ]
}
